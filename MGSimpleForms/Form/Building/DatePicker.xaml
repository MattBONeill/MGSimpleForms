<UserControl x:Class="MGSimpleForms.Form.Building.DatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MGSimpleForms.Form"
             mc:Ignorable="d" GotFocus="UserControl_GotFocus">
    <TextBox Name="txtDate" 
             Text="{Binding RawDate, UpdateSourceTrigger=LostFocus}" 
             TextDecorations="Underline" 
             PreviewKeyDown="txtDate_KeyDown" 
             SelectionChanged="txtDate_SelectionChanged"
             GotFocus="txtDate_GotFocus"
             VerticalContentAlignment="Center"/>

</UserControl>
