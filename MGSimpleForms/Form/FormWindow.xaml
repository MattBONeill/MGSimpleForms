<Window x:Class="MGSimpleForms.Form.FormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGSimpleForms.Form"
        mc:Ignorable="d"
        Title="FormWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" 
        DataContextChanged="Window_DataContextChanged">
    <local:FormUserControl CustomBuildOptions="{Binding CustomBuildOptions, RelativeSource={RelativeSource AncestorType=local:FormWindow}}"/>
</Window>
