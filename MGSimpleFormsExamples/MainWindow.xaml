<Window x:Class="MGSimpleFormsExamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGSimpleFormsExamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,5"/>
        </Style>
    </Window.Resources>
    <StackPanel >
        <Button Name="Textbox" Click="Textbox_Click" >Text Box Testing</Button>
        <Button Name="File_Folder_Picker" Click="File_Folder_Picker_Click" >File and Folder Picker Testing</Button>
        <Button Name="btn" Click="btn_Click">Button Testing</Button>
        <Button Name="dpcb" Click="dpcb_Click" >Date Picker/CheckBox Testing</Button>
        <Button Name="cbo" Click="cbo_Click" >ComboBox Testing</Button>
        <Button Name="gl" Click="gl_Click" >Grid List Testing</Button>
        <Button Name="lbl" Click="lbl_Click" >Label Testing</Button>
        <Button Name="Question" Click="Question_Click" >Question Box/Grid Form Testing</Button>
        <Button Name="Item" Click="Item_Click">Edit Item Testing</Button>
        <Button Name="Replace" Click="Replace_Click">Replace Prop in Child Class</Button>
        <Button Name="Progress" Click="Progress_Click">Progress Class</Button>
    </StackPanel>
</Window>
